Create a Flutter application using Riverpod state management where pressing a button changes the background color of the appBar and Scaffold, as well as plays one of 10 music notes. 
dependencies:
  flutter:
    sdk: flutter
  flutter_riverpod: ^2.4.0
  audioplayers: ^2.0.4

flutter:
  assets:
    - assets/notes/

 SOURCE CODE:
import 'dart:math';
import 'package:flutter/material.dart';
import 'package:flutter_riverpod/flutter_riverpod.dart';
import 'package:audioplayers/audioplayers.dart';

// State provider for background color
final colorProvider = StateProvider<Color>((ref) => Colors.blue);

// State provider for note index
final noteProvider = StateProvider<int>((ref) => 1);

void main() {
  runApp(ProviderScope(child: MyApp()));
}

class MyApp extends ConsumerWidget {
  @override
  Widget build(BuildContext context, WidgetRef ref) {
    final bgColor = ref.watch(colorProvider);

    return MaterialApp(
      title: 'Riverpod Music Notes',
      home: HomeScreen(bgColor: bgColor),
    );
  }
}

class HomeScreen extends ConsumerWidget {
  final Color bgColor;
  final AudioPlayer player = AudioPlayer();

  HomeScreen({required this.bgColor});

  void changeColorAndPlayNote(WidgetRef ref) {
    // Change color
    final randomColor =
        Colors.primaries[Random().nextInt(Colors.primaries.length)];
    ref.read(colorProvider.notifier).state = randomColor;

    // Play random note
    int noteIndex = Random().nextInt(10) + 1;
    ref.read(noteProvider.notifier).state = noteIndex;

    player.play(AssetSource('notes/note$noteIndex.wav'));
  }

  @override
  Widget build(BuildContext context, WidgetRef ref) {
    final noteIndex = ref.watch(noteProvider);

    return Scaffold(
      appBar: AppBar(
        title: Text('Riverpod Music Notes'),
        backgroundColor: bgColor,
      ),
      backgroundColor: bgColor.withOpacity(0.3),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text(
              "Current Note: $noteIndex",
              style: TextStyle(fontSize: 24),
            ),
            SizedBox(height: 20),
            ElevatedButton(
              onPressed: () => changeColorAndPlayNote(ref),
              child: Text("Change Color & Play Note"),
            ),
          ],
        ),
      ),
    );
  }
}
